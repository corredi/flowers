<mapping>
    <class name="com.accenture.flowershop.Customer">

        <map-to xml="customer"/>

        <field name="age" type="integer">
            <bind-xml name="age" node="attribute"/>
        </field>

        <field name="flag" type="boolean">
            <bind-xml name="flag" node="element"/>
        </field>

        <field name="name" type="string">
            <bind-xml name="name" node="element"/>
        </field>

        <field name="address" type="string">
            <bind-xml name="address" node="element"/>
        </field>
    </class>
    <class name="com.accenture.flowershop.fe.dto.user.CustomerDTO">
        <map-to xml="CustomerDTO"/>

        <field name="login" type="string">
            <bind-xml name="login" node="attribute"/>
        </field>

        <field name="password" type="string">
            <bind-xml name="password" node="attribute"/>
        </field>

        <field name="address" type="string">
            <bind-xml name="address" node="attribute"/>
        </field>

        <field name="phone" type="string">
            <bind-xml name="phone" node="attribute"/>
        </field>

        <field name="money" type="java.math.BigDecimal">
            <bind-xml name="money" node="attribute"/>
        </field>

        <field name="discount" type="integer">
            <bind-xml name="discount" node="attribute"/>
        </field>
    </class>

    <class name="com.accenture.flowershop.fe.dto.user.DiscountDTO">
        <map-to xml="DiscountDTO"/>
        <field name="login" type="string">
            <bind-xml name="login" node="attribute"/>
        </field>
        <field name="discount" type="integer">
            <bind-xml name="discount" node="attribute"/>
        </field>
    </class>

</mapping>