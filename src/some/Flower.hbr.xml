<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.accenture.flowershop.be.entity.flower.Flower" table="FLOWER">
        <id name="name" type="string" column="NAME">
        </id>
        <property name="cost" column="COST" type="double">
        </property>
        <property name="stock" column="STOCK" type="integer">
        </property>
    </class>
</hibernate-mapping>
